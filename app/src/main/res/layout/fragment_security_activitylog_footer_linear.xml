<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/linearFooter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:background="@color/footer"
        android:orientation="horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@color/black"></View>

        <RelativeLayout
            android:id="@+id/raletive1securityFooter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="20">

            <ImageView
                android:id="@+id/imgLockActivityLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_lock_activitylog_green" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/raletive2securityFooter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="20">

            <View
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:background="@color/black"></View>

            <ImageView
                android:id="@+id/imgPin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_pin_activitylog"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/raletive3securityFooter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="20">

            <View
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:background="@color/black"></View>

            <ImageView
                android:id="@+id/imgBluetoothActivityLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_bluetooth_activitylog_" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/raletive4securityFooter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="20">

            <View
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:background="@color/black"></View>

            <ImageView
                android:id="@+id/imgActivityLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_activitylog_white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/raletive5securityFooter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="20">

            <View
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:background="@color/black"></View>

            <ImageView
                android:id="@+id/imgAIRBNBativityLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_airbnb_activitylog" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@color/black"></View>


    </LinearLayout>
</layout>