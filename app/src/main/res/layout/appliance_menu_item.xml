<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_item_rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:addStatesFromChildren="true"
    android:background="@color/BgDark"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/grid_item_image"
            android:layout_width="@dimen/room_centre_icon_room_size"
            android:layout_height="@dimen/room_centre_icon_room_size"
            android:layout_marginBottom="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_room_center_climate_selector"/>

        <TextView
            android:id="@+id/grid_menu_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item"
            android:textAlignment="center"
            android:textColor="@color/auluxa_text_white_color_state_list"
            android:textSize="12sp" />

    </LinearLayout>
</RelativeLayout>