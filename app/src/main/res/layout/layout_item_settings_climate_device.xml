<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/rlItemClimateDevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:state_enabled="false">

        <ImageView
            android:id="@+id/imgClimateDevice"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:tag="1"
            app:srcCompat="@drawable/ir_node" />

        <TextView
            android:id="@+id/tvItemClimateDevice"
            fontPath="Fonts/Lato/Lato-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imgArrowRight"
            android:layout_toRightOf="@+id/imgClimateDevice"
            android:duplicateParentState="true"
            android:padding="16dp"
            android:text="ITEM CLIMATE DEVICES"
            android:textAllCaps="true"
            android:textColor="@color/auluxa_text_color_state_list" />

        <ImageView
            android:id="@+id/imgArrowRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:duplicateParentState="true"
            android:padding="8dp"
            android:tag="1"
            app:srcCompat="@drawable/scenes_right_arrow_selector" />

    </RelativeLayout>


</RelativeLayout>