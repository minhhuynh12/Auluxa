<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.constraint.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:background="@color/headerTitleBackgroundColor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="DURATION PIN"
                fontPath="Fonts/Lato/Lato-Regular.ttf"
                android:textColor="@color/headerTitleTextColor"
                />

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="@dimen/header_button_back_size"
                android:layout_height="@dimen/header_height"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_back"
                android:padding="@dimen/distance_smaller"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_back" />
        </RelativeLayout>

        <View
            android:id="@+id/backgroundView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorOverlayGray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1" />


        <Button
            android:id="@+id/btnEditDurationPin"
            style="@style/Widget.AppCompat.Button.Borderless"
            fontPath="Fonts/Lato/Lato-Regular.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/auluxa_button_selector"
            android:minHeight="@dimen/button_min_height"
            android:tag="1"
            android:text="EDIT"
            android:textAllCaps="true"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1" />

        <Button
            android:id="@+id/btnShareDurationPin"
            style="@style/Widget.AppCompat.Button.Borderless"
            fontPath="Fonts/Lato/Lato-Regular.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SHARE"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/auluxa_button_selector"
            android:minHeight="@dimen/button_min_height"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnEditDurationPin"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundView"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@+id/backgroundView"
            app:layout_constraintRight_toRightOf="@+id/backgroundView"
            app:layout_constraintTop_toTopOf="@+id/backgroundView"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="11dp"
                android:clickable="false">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/txtNamePin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textViewName"
                        fontPath="Fonts/Lato/Lato-Regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NAME"
                        android:textColor="#fff"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/textViewAPContentName"
                        fontPath="Fonts/Lato/Lato-Regular.ttf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="JOHN DOE"
                        android:textColor="#fff"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.5"
                        android:layout_marginRight="8dp"
                        android:maxWidth="150dp"
                        android:gravity="end"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/textViewName"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintHorizontal_bias="0.502" />

                    <EditText
                        android:id="@+id/editTextNamePin"
                        android:lines="4"
                        fontPath="Fonts/Lato/Lato-Regular.ttf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rect_border_green"
                        android:ems="20"
                        android:hint="ENTER NAME"
                        android:imeOptions="actionDone"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/auluxaGreen"
                        android:textColorHint="@color/auluxaGreen"
                        android:textSize="15sp"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginRight="8dp"
                        app:layout_constraintRight_toRightOf="parent" />
                </android.support.constraint.ConstraintLayout>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/btnTimeZone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    fontPath="Fonts/Lato/Lato-Regular.ttf"
                    android:layout_marginLeft="8dp"
                    android:duplicateParentState="true"
                    android:text="TIME ZONE"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/textViewContentTimeZone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fontPath="Fonts/Lato/Lato-Regular.ttf"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="8dp"
                    android:text= "HONG KONG"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:textColor="#fff" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/btnStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    fontPath="Fonts/Lato/Lato-Regular.ttf"
                    android:layout_marginLeft="8dp"
                    android:duplicateParentState="true"
                    android:text="START DATE"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/textViewStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fontPath="Fonts/Lato/Lato-Regular.ttf"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="8dp"
                    android:text= "START DATE"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:textColor="#fff" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/btnStartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    fontPath="Fonts/Lato/Lato-Regular.ttf"
                    android:layout_marginLeft="8dp"
                    android:duplicateParentState="true"
                    android:text="START TIME"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/textViewStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fontPath="Fonts/Lato/Lato-Regular.ttf"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="4dp"
                    android:text="START TIME"
                    android:layout_marginTop="8dp"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:textColor="#fff" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:duplicateParentState="true"
                    android:text="END DATE"
                    fontPath="Fonts/Lato/Lato-Regular.ttf"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/textViewEndDate"
                    android:layout_width="wrap_content"
                    android:text="END DATE"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="4dp"
                    fontPath="Fonts/Lato/Lato-Regular.ttf"
                    android:layout_marginTop="8dp"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:textColor="#fff" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/btnEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:duplicateParentState="true"
                    fontPath="Fonts/Lato/Lato-Regular.ttf"
                    android:text="END TIME"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/textViewEndTime"
                    android:layout_width="wrap_content"
                    fontPath="Fonts/Lato/Lato-Regular.ttf"
                    android:layout_height="wrap_content"
                    android:text="END TIME"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="8dp"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:textColor="#fff" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/btnPin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:duplicateParentState="true"
                    fontPath="Fonts/Lato/Lato-Regular.ttf"
                    android:text="PIN"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/textViewContentPin"
                    android:layout_width="wrap_content"
                    fontPath="Fonts/Lato/Lato-Regular.ttf"
                    android:layout_height="wrap_content"
                    android:text="1234567"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="8dp"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:textColor="#fff" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/btnStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:duplicateParentState="true"
                    fontPath="Fonts/Lato/Lato-Regular.ttf"
                    android:text="STATUS"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/textViewContentStatus"
                    android:layout_width="wrap_content"
                    fontPath="Fonts/Lato/Lato-Regular.ttf"
                    android:layout_height="wrap_content"
                    android:text="IN USE"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="8dp"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:textColor="#fff" />
            </RelativeLayout>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</layout>
