<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/BgLight"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <com.weigan.loopview.LoopView
                android:id="@+id/time_loop_picker_column_1"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                app:awv_centerTextColor="@color/auluxaGreen"
                app:awv_dividerTextColor="@color/auluxaGreen"
                app:awv_textsize="18"
                app:awv_lineSpace="5"
                app:layout_constraintBottom_toTopOf="@+id/button"
                app:layout_constraintDimensionRatio="w,1:3"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/time_loop_picker_column_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.501"/>

            <com.weigan.loopview.LoopView
                android:id="@+id/time_loop_picker_column_2"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="0dp"
                app:awv_centerTextColor="@color/auluxaGreen"
                app:awv_dividerTextColor="@color/auluxaGreen"
                app:awv_textsize="18"
                app:awv_lineSpace="5"
                app:layout_constraintDimensionRatio="w,1:3"
                app:layout_constraintLeft_toRightOf="@+id/time_loop_picker_column_1"
                app:layout_constraintRight_toLeftOf="@+id/time_loop_picker_column_3"
                app:layout_constraintTop_toTopOf="@+id/time_loop_picker_column_1"/>

            <com.weigan.loopview.LoopView
                android:id="@+id/time_loop_picker_column_3"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="0dp"
                app:awv_centerTextColor="@color/auluxaGreen"
                app:awv_dividerTextColor="@color/auluxaGreen"
                app:awv_textsize="18"
                app:awv_lineSpace="5"
                app:layout_constraintDimensionRatio="w,1:3"
                app:layout_constraintLeft_toRightOf="@+id/time_loop_picker_column_2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/time_loop_picker_column_2"/>

            <Button
                android:id="@+id/button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:minHeight="@dimen/button_min_height"
                android:background="@color/auluxaGreen"
                android:gravity="center"
                android:text="Save"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="w,"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </FrameLayout>

</layout>


